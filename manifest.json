{
    "manifest_version": 3,
    "name": "Marketplace Mapper",
    "version": "1.2",
    "description": "Floating map of Facebook Marketplace listings.",
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "*://*.facebook.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.facebook.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "map.html",
                "map.js",
                "header.js",
                "leaflet/leaflet.css",
                "leaflet/leaflet.js",
                "leaflet/images/*",
                "pako.min.js",
                "data/cities_db.json.gz"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}